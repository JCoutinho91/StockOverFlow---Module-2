<html lang="en">

  {{! NAV BAR BOOTSTRAP }}
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="icon" href="/images/stock-icon-aba.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100;0,400;0,500;0,600;0,700;1,100;1,300&family=PT+Sans:wght@400;700&family=Roboto:wght@500&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>{{title}}</title>
  </head>

  <body>
    {{#if userIsLoggedIn}}
      <div class="margin-logo">
        <h1 class="logo">
          <img
            class="img-fluid"
            src="/images/web-logo.png"
            alt="Stock over flow logo"
            srcset=""
          />
        </h1>
      </div>
    {{else}}
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid nav-bar-logo">
          <a class="navbar-brand" href="/home-view"><img
              src="/images/web-logo.png"
              alt="Stock over flow nav-logo"
              srcset=""
            /></a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link active"
                  aria-current="page"
                  href="/home-view"
                >Home</a>
              </li>

            </ul>
            <form action="/search" class="d-flex" method="GET">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <input
                  class="form-control me-2"
                  type="text"
                  name="stockFind"
                  placeholder="Search"
                  aria-label="Search"
                />
                <button
                  class="btn btn-outline-success"
                  type="submit"
                >Search</button>
                <li class="nav-item">
                  <a
                    class="nav-link active"
                    aria-current="page"
                    href="/logout"
                  >Logout</a>
                </li>
              </ul>
            </form>
          </div>
        </div>
      </nav>

      <h1 class="logo">
        <img src="/images/web-logo.png" alt="Stock over flow logo" srcset="" />
      </h1>

    {{/if}}

    {{{body}}}

    <footer>
      <div class="container">

        <footer class="text-center text-white">
          <!-- Grid container -->
          <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">

              <!-- Linkedin -->
              <a
                class="btn btn-outline-light btn-floating m-1"
                href="https://github.com/MaximilianHM"
                role="button"
              ><i class="fab fa-github"></i><img
                  src="/images/githubicon.png"
                  alt=""
                  srcset=""
                /></a>
              <a
                class="btn btn-outline-light btn-floating m-1"
                href="https://www.linkedin.com/in/maximilianhm/"
                role="button"
              ><i class="fab fa-linkedin-in"></i><img
                  src="/images/linkedinicon.png"
                  alt=""
                  srcset=""
                /></a>
              <a
                class="btn btn-outline-light btn-floating m-1"
                href="https://github.com/JCoutinho91"
                role="button"
              ><i class="fab fa-github"></i><img
                  src="/images/githubicon.png"
                  alt=""
                  srcset=""
                /></a>
              <a
                class="btn btn-outline-light btn-floating m-1"
                href="https://www.linkedin.com/in/maximilianhm/"
                role="button"
              ><i class="fab fa-linkedin-in"></i><img
                  src="/images/linkedinicon.png"
                  alt=""
                  srcset=""
                /></a>
            </section>
            <b><p>Developed by Maximilian Haut Mayer and José Guedes</p></b>
          </div>
          <!-- Grid container -->

          <!-- Copyright -->
          <div
            class="text-center p-3"
            style="background-color: rgba(0, 0, 0, 0.2);"
          >
            © 2021 Copyright:
            <a
              class="text-white"
              href="https://mdbootstrap.com/"
            >stockoverflow</a>
          </div>
          <!-- Copyright -->
        </footer>

      </div>
    </footer>
    <!-- End of .container -->

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/js/script.js"></script>
  </body>

</html>