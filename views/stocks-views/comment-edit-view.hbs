<h1>StockOverFlow</h1>

<h2>Edit your Comment</h2>

<form action="/comment-edit/{{foundComment.ticker}}/{{foundComment._id}}" method="POST">

  {{! original form }}
  <label>Name:</label>
  <input type="text" name="name" value="{{foundComment.name}}" />

  <label>Comment:</label>
  <input type="text" name="comment" value="{{foundComment.comment}}" />

  <button type="submit">Save changes</button>

</form>

<form action="/comment-edit/delete/{{foundComment.ticker}}/{{foundComment._id}}" method="POST">
  <button type="submit">Delete</button>
</form>

